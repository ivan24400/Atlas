<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivanpillay.atlas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserActivity" android:exported="true"/>
        <activity
            android:name=".StudentListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StudentProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ScheduleFragment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StudentsFragment"
            android:theme="@style/AppTheme" />
        <activity android:name=".AppbarActivity" />
    </application>

</manifest>